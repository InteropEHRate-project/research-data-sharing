<!-- views/home.handlebars -->
{{#if user}}


  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><b>Administrator Profile Information</b></h3>
    </div>
    <div class="panel-body">
      <p><b>Username :</b> {{user.username}}</p>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><b>List of studies</b></h3>
    </div>
    <div class="panel-body">
        
            <table style="width:100%">  
              <tr style="border-bottom:1pt solid black;">
                <th>
                  <div style="text-align: center;">
                    <p></p>
                  </div>
                </th>
                <th style="border-right:1pt solid black;">
                  <div style="text-align: center;">
                    <p></p>
                  </div>
                </th>
                <th style="border-right:1pt solid black;">
                  <div style="text-align: center;">
                    <p><b>P.I. OF THE STUDY</p>
                  </div>
                </th>
                <th style="border-right:1pt solid black;">
                  <div style="text-align: center;">
                    <p><b>TITLE</p>
                  </div>
                </th>
                <th style="border-right:1pt solid black;">
                  <div style="text-align: center;">
                    <p><b>BEGINNING OF THE STUDY</p>
                  </div>
                </th>
                <th style="border-right:1pt solid black;">
                  <div style="text-align: center;">
                    <p><b>END OF THE STUDY</p>
                  </div>
                </th>
                <th style="padding:10px">
                    <div style="text-align: center;">
                      <p><b>PUBLISHED</p>
                    </div>
                </th>
              </tr>
            {{#each html.list}}
                <tr style="border-bottom:1pt solid black;">
                    <th style="padding:10px">
                        <form action="/publishing?rdd_id={{this.rdd_id}}&status={{this.published}}" method="post">
                            <div>
                                <input type="submit" value="publish / unpublish"/>
                            </div>
                        </form>
                    </th>
                    <th style="border-right:1pt solid black;">
                        <form action="/delete?rdd_id={{this.rdd_id}}&path={{this.path}}" method="post">
                            <div>
                                <input type="submit" value="delete"/>
                            </div>
                        </form>
                    </th>
                    <!--
                    <th>
                        <div style="text-align: center;">
                        {{this.rdd_id}}
                        </div>
                    </th>
                    -->
                    <th style="border-right:1pt solid black;">
                        <div style="text-align: center;">
                        {{this.pi}}
                        </div>
                    </th>
                    <th style="border-right:1pt solid black;">
                        <div style="text-align: center;">
                        <a href="http://{{../config.endpoint.host}}:{{../config.endpoint.port}}/study?id={{this.rdd_id}}&path={{this.path}}">{{this.title}}</a>
                        </div>
                    </th>
                    <th style="border-right:1pt solid black;">
                        <div style="text-align: center;">
                        {{this.start_date}}
                        </div>
                    </th>
                    <th style="border-right:1pt solid black;">
                        <div style="text-align: center;">
                        {{this.end_date}}
                        </div>
                    </th>
                    <th>
                        <div style="padding-left: 45px;">
                            {{#if this.published}}
                                <div class='box green'></div>
                            {{else}}
                                <div class='box red'></div>
                            {{/if}}
                        </div>
                    </th>

                </tr>
                
            {{/each}}
            </table>
        
        
        

    </div>
  </div>

